{
  "manifest_version": 2,

  "name": "Correios Tracker",
  "description": "Bem vindo(a) ao Correios Tracker, gerencie e rastreie seus objetos enviados de forma automatizada.",
  "short_name": "Correios Tracker",
  "version": "0.3",
  "author": "Adriano Chambel M. de Lima <acmlima.softweb@gmail.com>",
  "homepage_url": "https://github.com/achambel/correios-tracker",

  "minimum_chrome_version": "45",

  "permissions": ["notifications", "storage", "alarms", "https://api.postmon.com.br/"],

  "background": {
    "scripts": ["js/background.js", "js/service.js", "js/utils.js", "js/vendor/jquery.min.js"]
  },

  "browser_action": {
    "default_title": "Correios Tracker - rastrear objetos",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "16x16.png",
    "48": "48x48.png",
    "128": "128x128.png"
  }
  
}
